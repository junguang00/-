<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fuicuiedu.idedemo.easyshop_demo">

    <application
        android:name=".EasyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity" />
        <activity android:name=".main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.login.LoginActivity" />
        <activity android:name=".user.register.RegisterActivity" />
        <activity android:name=".main.me.personinfo.PersonInfoActivity" />
        <activity android:name=".main.me.personinfo.NickNameActivity"></activity>
    </application>

</manifest>